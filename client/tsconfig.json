{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "styles/*": ["styles/*"],
      "components/*": ["components/*"],
      "locale/*": ["locale/*"],
      "providers/*": ["providers/*"],
      "types/*": ["types/*"],
      "store/*": ["store/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src"]
}
